<p id="notice"><%= notice %></p>

<h1>Detail</h1>

<div class="form">
  <p>
    <strong>User:</strong>
    <%= @picture.user.name %>
  </p>

  <p>
    <strong>Image:</strong>
    <%= image_tag @picture.image.url %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= @picture.content %>
  </p>
</div>

<% if logged_in? && authenticate_user?(@picture) %>
  <p class="bottom"><%= link_to 'Edit', edit_picture_path(@picture) %> |
  <%= link_to 'Delete', @picture, method: :delete, data: { confirm: 'Are you sure?' } %></p>
<% end %>
